package stringDemo;

public class Main {

	public static void main(String[] args) {
		String mesaj = "Bugün hava çok güzel.";
		System.out.println(mesaj);

		System.out.println("Eleman sayýsý: " + mesaj.length());
		System.out.println("5. Eleman: " + mesaj.charAt(4));
		System.out.println(mesaj.concat(" Yaþasýn!"));
		System.out.println(mesaj.startsWith("A"));//Baþlangýç harf
		System.out.println(mesaj.endsWith("."));//Bitiþ harf
		char [] mesajKarakter = new char[5];
		mesaj.getChars(0,5,mesajKarakter,0);
		for (char karakter:mesajKarakter) {
			System.out.println(karakter);
		}
		System.out.println(mesaj.indexOf(6));

	}

}
